{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "module": "commonjs",
    "target": "es5",
    "noImplicitAny": false,
    "outDir": "./build",
    "sourceMap": true,
    "jsx": "react",
    "lib": ["es5", "es6", "dom", "scripthost", "es2015"],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "moduleResolution": "node",
    "rootDir": "."
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "build",
    "coverage",
    "node_modules",
    "**/*.spec.ts",
    "**/*.test.ts*"
  ]
}