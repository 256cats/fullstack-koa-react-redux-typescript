{
  "name": "koa-typescript-starter",
  "version": "1.0.0",
  "main": "dist/index.js",
  "license": "CC0-1.0",
  "scripts": {
    "build-client-prod": "webpack -p --config=config/webpack/prod.js",
    "build-server-prod": "yarn lint && tsc -p tsconfig-server-prod.json",
    "build-prod": "rm -rf ./build/server && yarn build-server-prod && yarn build-client-prod",
    "start-prod": "NODE_ENV=production node build/server/server.js",
    "start-dev": "cross-env NODE_ENV=development nodemon --watch 'src/server/**/*' -e ts,tsx --exec 'ts-node' src/server/server.ts",
    "lint": "yarn lint:ts && yarn lint:sass",
    "lint:ts": "tslint './src/**/*.ts*' --format stylish --force",
    "lint:sass": "stylelint ./src/**/*.scss",
    "lint:ts-fix": "tslint --project . --fix",
    "test": "jest --watchAll --coverage"
  },
  "devDependencies": {
    "@types/jest": "^21.1.4",
    "@types/koa": "2.0.39",
    "@types/koa-router": "7.0.23",
    "@types/node": "^8.0.44",
    "@types/react": "^16.0.13",
    "@types/react-dom": "^16.0.1",
    "@types/classnames": "2.2.3",
    "@types/history": "4.6.1",
    "@types/react-redux": "5.0.10",
    "@types/react-router": "4.0.15",
    "@types/redux-actions": "2.2.2",
    "@types/webpack": "3.0.13",
    "@types/webpack-env": "1.13.2",
    "awesome-typescript-loader": "^3.2.3",
    "babel": "^6.23.0",
    "babel-core": "^6.26.0",
    "babel-loader": "^7.1.2",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-2": "^6.24.1",
    "cross-env": "5.0.5",
    "css-loader": "^0.28.7",
    "express": "^4.16.2",
    "file-loader": "^1.1.5",
    "identity-obj-proxy": "^3.0.0",
    "image-webpack-loader": "^3.4.2",
    "jest": "^21.2.1",
    "koa-webpack": "^1.0.0",
    "node-sass": "^4.5.3",
    "nodemon": "1.12.0",
    "postcss-load-config": "^1.2.0",
    "postcss-loader": "^2.0.8",
    "classnames": "^2.2.5",
    "react": "^16.0.0",
    "react-dom": "^16.0.0",
    "react-redux": "^5.0.6",
    "react-router": "^4.2.0",
    "redux": "^3.7.2",
    "redux-actions": "^2.2.1",
    "react-addons-test-utils": "^15.6.2",
    "react-hot-loader": "^3.1.1",
    "sass-loader": "^6.0.6",
    "style-loader": "^0.19.0",
    "stylelint": "^8.2.0",
    "stylelint-config-standard": "^17.0.0",
    "stylelint-webpack-plugin": "^0.9.0",
    "ts-node": "3.3.0",
    "tslint": "5.7.0",
    "typescript": "2.5.2",
    "uglifyjs-webpack-plugin": "^0.4.6",
    "webpack": "^3.8.1",
    "webpack-dev-middleware": "^1.12.0",
    "webpack-dev-server": "^2.9.2",
    "webpack-merge": "^4.1.0"
  },
  "dependencies": {
    "classnames": "^2.2.5",
    "autoprefixer": "^7.1.5",
    "extract-text-webpack-plugin": "^3.0.1",
    "koa": "2.3.0",
    "koa-router": "7.2.1",
    "koa-static": "^4.0.1",
    "postcss-smart-import": "^0.7.5"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "<rootDir>/configs/jest/jest.preprocessor.js"
    },
    "transformIgnorePatterns": [
      "[/\\\\]node_modules[/\\\\].+\\.(js|jsx)$"
    ],
    "testRegex": "/__tests__/.*\\.(ts|tsx)$",
    "moduleDirectories": [
      "node_modules"
    ],
    "moduleNameMapper": {
      "^.+\\.(css|scss)$": "identity-obj-proxy",
      "^.+\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/configs/jest/fileMock.js"
    },
    "globals": {
      "DEVELOPMENT": false,
      "FAKE_SERVER": false
    }
  }
}
